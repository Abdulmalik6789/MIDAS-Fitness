@model IEnumerable<MIDAS_Fitness.Models.MembershipOffer>
@{
    ViewData["Title"] = "Membership";
}

<div class="flex flex-col items-center py-10">
    <img src="~/images/gym logo.png" alt="MiDAS Fitness" class="w-48 h-48 object-contain mb-8" />

    <!-- Progress Steps -->
    <div class="flex items-center justify-center mb-10 w-full max-w-3xl">
        <div class="flex-1 flex items-center">
            <div class="bg-black text-white px-6 py-3 rounded-lg font-semibold">Membership</div>
            <div class="flex-1 h-px bg-gray-300"></div>
        </div>
        <div class="flex-1 flex items-center">
            <div class="border border-gray-300 px-6 py-3 rounded-lg font-semibold text-gray-700 bg-white">Details</div>
            <div class="flex-1 h-px bg-gray-300"></div>
        </div>
        <div class="flex-1 flex items-center">
            <div class="border border-gray-300 px-6 py-3 rounded-lg font-semibold text-gray-700 bg-white">
                Terms &<br />Conditions
            </div>
            <div class="flex-1 h-px bg-gray-300"></div>
        </div>
        <div class="flex-1 flex items-center">
            <div class="border border-gray-300 px-6 py-3 rounded-lg font-semibold text-gray-700 bg-white">Payment</div>
            <div class="flex-1 h-px bg-gray-300"></div>
        </div>
        <div>
            <div class="border border-gray-300 px-6 py-3 rounded-lg font-semibold text-gray-700 bg-white">Confirmation</div>
        </div>
    </div>

    <h2 class="text-4xl font-bold text-gray-800 mb-8">Choose a Membership</h2>

    <div class="w-full max-w-5xl">
        <h3 class="text-2xl font-semibold mb-4">Memberships</h3>
        <div class="space-y-6">
            @foreach (var offer in Model)
            {
                <div class="flex flex-col md:flex-row justify-between items-center bg-black hover:bg-gray-900 transition rounded-lg p-6 cursor-pointer text-white"
                     onclick="location.href='@Url.Action("Details", "Membership", new { id = offer.Id })'">
                    <div>
                        <div class="text-xl font-bold">@offer.Title</div>
                        <div class="text-base">@offer.Duration</div>
                        <div class="text-sm italic text-gray-300 mb-2">Best value for long-term commitment</div>
                        <div class="text-base">₦@offer.SignupFee:N2 Signup Fee</div>
                        <div class="text-base">(plus ₦@offer.Tax:N2 tax)</div>
                        <div class="text-base">Location: @offer.Location</div>
                    </div>
                    <div class="text-right mt-4 md:mt-0">
                        <div class="text-3xl font-bold">₦@offer.FullCost:N2</div>
                        <div class="text-base">Full Cost</div>
                        <div class="text-base">(plus ₦@offer.Tax:N2 tax)</div>
                    </div>
                </div>
            }
        </div>
        <div class="flex justify-center">
            <button onclick="location.href='@Url.Action("Index", "Home")'"
                    class="mt-8 px-6 py-2 bg-gray-200 text-gray-700 rounded text-sm hover:bg-red-500 hover:text-white transition">
                Cancel
            </button>
        </div>
    </div>
</div>
