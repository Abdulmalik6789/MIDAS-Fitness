        <h3 class="text-2xl font-semibold mb-4">Memberships</h3>
        <div class="space-y-6">
            @foreach (var offer in Model)
            {
                <div class="flex flex-col md:flex-row justify-between items-center bg-black hover:bg-gray-900 transition rounded-lg p-6 cursor-pointer text-white"
                     onclick="location.href='@Url.Action("Details", "Membership", new { id = offer.Id })'">
